---
// src/components.SectionHeader.astro
const { title, description, isMainHook = false } = Astro.props;
---

<div class="flex flex-col items-center text-center gap-4 md:gap-8 lg:gap-10">
  <h2
    class:list={[
      "font-bold text-slate-800 leading-tight",
      isMainHook ? "text-4xl lg:text-6xl" : "text-3xl lg:text-4xl",
    ]}
  >
    {title}
  </h2>

  <hr class="w-3/4 h-1 border-0 rounded-full bg-emerald-900/10" />

  <p
    class:list={[
      "max-w-7xl text-gray-600 leading-relaxed",
      isMainHook ? "text-xl lg:text-2xl" : "text-lg lg:text-xl",
    ]}
  >
    {description}
  </p>
</div>
